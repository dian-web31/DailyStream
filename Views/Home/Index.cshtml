@model List<DailyStream.Models.Video>
@{
    ViewData["Title"] = "DailyStream - Tu plataforma de videos";
}

@await Html.PartialAsync("_Header")

<main class="bg-gray-900 py-8 min-h-screen">
    <div class="px-4 container mx-auto">
        <h2 class="text-white mb-6 text-2xl font-bold">Videos populares</h2>
        
        @if (Model != null && Model.Any())
        {
            <div class="gap-6 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
                @foreach (var video in Model)
                {
                    @await Html.PartialAsync("_VideoCard", video)
                }
            </div>
        }
        else
        {
            <div class="bg-gray-800 p-8 rounded-lg text-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-600 mb-4 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
                <h3 class="text-white mb-2 text-xl font-semibold">No se encontraron videos</h3>
                <p class="text-gray-400">Intenta más tarde o busca videos específicos.</p>
            </div>
        }
    </div>
</main>

@await Html.PartialAsync("_Footer")
