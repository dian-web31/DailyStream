@model string

<div class="bg-gray-800 rounded-lg p-4">
    <h3 class="text-white text-xl font-semibold mb-4">Comentarios</h3>
    
    <div class="mb-6">
        <form class="flex flex-col">
            <textarea 
                placeholder="Escribe un comentario..." 
                class="w-full px-4 py-2 rounded-lg bg-gray-700 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-sky-500 mb-2"
                rows="3"
            ></textarea>
            <button 
                type="button" 
                class="bg-sky-600 hover:bg-sky-700 text-white px-4 py-2 rounded-lg transition duration-300 self-end"
            >
                Comentar
            </button>
        </form>
    </div>
    
    <div class="space-y-4">
        @{
            // Comentarios simulados
            var comments = new[]
            {
                new { User = "Usuario123", Content = "¡Gran video! Me encantó el contenido.", Time = "hace 2 horas" },
                new { User = "VideoFan", Content = "Muy interesante, gracias por compartir.", Time = "hace 1 día" },
                new { User = "Comentarista", Content = "Esperaba algo diferente, pero aún así me gustó.", Time = "hace 3 días"}
            };
        }
        
        @foreach (var comment in comments)
        {
            <div class="bg-gray-700 rounded-lg p-3">
                <div class="flex justify-between items-start">
                    <div class="flex items-start">
                        <div class="bg-gray-500 rounded-full h-8 w-8 flex items-center justify-center text-white font-bold mr-2">
                            @comment.User[0]
                        </div>
                        <div>
                            <div class="flex items-center">
                                <span class="text-white font-medium">@comment.User</span>
                                <span class="text-gray-400 text-xs ml-2">@comment.Time</span>
                            </div>
                            <p class="text-gray-300 mt-1">@comment.Content</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
