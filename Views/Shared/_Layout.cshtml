<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DailyStream</title>
    <link
      rel="stylesheet"
      href="~/css/site.min.css"
      asp-append-version="true"
    />
    <link rel="stylesheet" href="~/DailyStream.styles.css" asp-append-version="true" />
  </head>
  <body>
    <header>
      <nav class="bg-white border-b shadow mb-3">
        <div class="container mx-auto flex items-center justify-between p-4">
          <a class="text-xl font-semibold"
            asp-area=""
            asp-controller="Home"
            asp-action="Index"
            >MyProject</a>
          <button
            class="md:hidden p-2 rounded focus:outline-none focus:ring-2 focus:ring-gray-400"
            id="nav-toggle"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16m-7 6h7"
              ></path>
            </svg>
          </button>
          <div
            class="hidden md:flex md:items-center md:space-x-4"
            id="nav-menu"
          >
            <ul class="flex space-x-4">
              <li>
                <a class="text-gray-700 hover:text-gray-900"
                  asp-area=""
                  asp-controller="Home"
                  asp-action="Index"
                  >Home</a>
              </li>
              <li>
                <a class="text-gray-700 hover:text-gray-900"
                  asp-area=""
                  asp-controller="Home"
                  asp-action="Privacy"
                  >Privacy</a>
              </li>
              <li>
                <a class="text-gray-700 hover:text-gray-900"
                  asp-area=""
                  asp-controller="Bikes"
                  asp-action="Index"
                  >Bike</a>
              </li>
              <li>
                <a class="text-gray-700 hover:text-gray-900"
                  asp-area=""
                  asp-controller="Products"
                  asp-action="Insert"
                  >Insert</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <div class="container mx-auto p-4">
      <main role="main" class="pb-3">@RenderBody()</main>
    </div>
    <footer class="border-t text-gray-600 py-4 text-center">
      <div class="container mx-auto">
        &copy; 2025 - DailyStream -
        <a class="text-blue-500 hover:underline"
          asp-area=""
          asp-controller="Home"
          asp-action="Privacy"
          >Privacy</a>
      </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
      document
        .getElementById("nav-toggle")
        .addEventListener("click", function () {
          document.getElementById("nav-menu").classList.toggle("hidden");
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
  </body>
</html>
